<header class="navbar navbar-light sticky-top fixed-top">
  <div class="container d-flex justify-content-between align-items-center">
    <%= link_to root_path do %>
      <%= image_tag 'logo2.png' , class:"logo-img" %>
    <% end %>
    <% unless current_page?(root_path) %>
      <% if user_signed_in? %>
        <div class="navbar-text text-light">
          ととの〜るへようこそ、<%= current_user.name %>さん
        </div>
        <div class="nav-item">
          <%= link_to destroy_user_session_path, method: :delete  do %>
            <%= image_tag 'logout.png', class:"logo-img" %>
          <% end %>
        </div>
      <% end %>
    <% end %>
    <% if admin_signed_in? %>
      <div class="navbar-text text-light">
        お疲れ様です！
      </div>
      <div class="nav-item">
        <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn btn-outline-danger" %>
      </div>
    <% end %>
  </div>
</header>
