<div class="row">
    <div class=col-10>
      <h4>新規でユーザ登録をする</h4>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "user/shared/error_messages", resource: resource %>
        <div class="field">
          <%= f.label :ユーザ名%>
          <%= f.text_field :name, autofocus: true,placeholder: "ユーザ名を入力してください", class:"form-control" %>
        </div>
        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com",class:"form-control" %>
        </div>
        <div class="field">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
        </div>
        <div class="field">
          <%= f.label :パスワード（確認用） %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" , class:"form-control"%>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class:"btn btn-success mt-2" %>
        </div>
      <% end %>

      <h4 class="mt-5" >既に登録がお済みの方</h4>
      <%= link_to "こちら",new_user_session_path%>からログインをしてください

    </div>
  </div>