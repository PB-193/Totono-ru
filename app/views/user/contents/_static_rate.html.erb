<div id="rate_<%= content.id %>">
<script>
$(document).on('turbolinks:load', function() {
  let elem = document.querySelector('#rate_<%= content.id %>');
  if (elem == null) return;
  
  elem.innerHTML = "";
  let opt = {  
    starOn: "<%= asset_path('star-on.png') %>",
    starOff: "<%= asset_path('star-off.png') %>",
    starHalf: "<%= asset_path('star-half.png') %>",
    score: "<%= content.rate %>",
    readOnly: true,
  };
  raty(elem, opt);
});
</script>