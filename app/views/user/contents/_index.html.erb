<div class="row">
  <div class="col-md-8 offset-md-2">
    <% contents.each do |content| %>
      <div class="card mb-4">
        <div class="card-body">
          <% if user_signed_in? %>
            <h5 class="card-title mb-4"><%= link_to content.title, content_path(content) %></h5>
          <% end %>
          <% if admin_signed_in? %>
            <h5 class="card-title mb-4"><%= link_to content.title, admin_content_path(content) %></h5>
          <% end %>
          <div class="row">
            <div class="col-md-1"></div>
            <div class="col-md-3 text-center">
              <strong>ユーザー:</strong> <%= content.user.name if content.user %><br>
              <% if content.user.get_profile_image.present? %>
                <%= image_tag content.user.get_profile_image, size: "70x70", class: 'rounded-circle' %>
              <% end %><br>
            </div>
            <div class="col-md-7">
              <p class="card-text">
                <strong>投稿日:</strong> <%= content.created_at.strftime("%Y年%m月%d日") %><br>
                <strong>タ　グ:</strong>
                <% content.tags.each do |tag| %>
                  <%= link_to searches_path(tag_id: tag.id), class: "badge badge-primary", style: "opacity: 1;" do %>
                    <%= tag.name %> 
                  <% end %>
                <% end %>  <br>
                <strong>施　設:</strong> <%= content.spot %>
              </p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
