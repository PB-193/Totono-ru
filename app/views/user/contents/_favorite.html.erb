  <div class="col-md-1">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title">いいね</h5>
        </div>
        <div class="card-body">
          <% if content.favorited_by?(current_user) %>
            <%= link_to content_favorites_path(content.id), method: :delete do %>
              <span style="color:red;">♥<%= content.favorites.count %>︎</span>
            <% end %>
          <% else %>
            <%= link_to content_favorites_path(content.id), method: :post do %>
              ♡<%= @content.favorites.count %>
            <% end %>
          <% end %>
        </div>
      </div>
  </div>